<resources>

    <style name="splashScreenTheme" parent="@style/AppThemeSplash">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="AppThemeSplash" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="MyAlertDialogData" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#02c7e6</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#000</item>

    </style>

    <style name="AppThemeDark2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#000</item>
    </style>

    <style name="ThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorPrimary">#000</item>
        <item name="colorAccent">#fff</item>
    </style>

    <style name="AppThemeWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar" >
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="titleTextColor">@color/colorWhite</item>
    </style>


</resources>
