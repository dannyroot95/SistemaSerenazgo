<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"
        android:state_pressed="true"
        android:drawable="@drawable/ic_eye"
        /> //currently pressed turning the toggle on
    <item android:state_pressed="true" android:drawable="@drawable/ic_eye"/> //currently pressed turning the toggle off
    <item android:state_checked="true" android:drawable="@drawable/ic_eyeclose"/> //not pressed default checked state
    <item android:drawable="@drawable/ic_eye"/> //default non-pressed non-checked
</selector>