<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/bar_item"
        android:layout_width="match_parent"
        android:elevation="6dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp"
        android:clickable="true"
        android:foreground="@drawable/shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/alarma"
                android:id="@+id/imgIncident"
                android:layout_gravity="center"
                android:layout_height="80dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/pos1"
                        android:text="NÃºmero de registro :"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/listNumFicha"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:gravity="right"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/pos2"
                        android:text="Fecha :"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/listFecha"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/pos3"
                        android:text="Hora :"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/listHora"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/pos5"
                        android:text="Modalidad :"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/listModalidad"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:id="@+id/linearButtons"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="VER DETALLES"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#A2A2A2"
                        android:textSize="14sp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Hola"
                    android:maxLength="30"
                    android:id="@+id/url"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <!-- Aqui-->

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>