<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailIndicent">

    <include layout="@layout/action_bar_toollbar"/>

    <ScrollView
        android:layout_width="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#F3F3F3"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Nombre de sereno :"
                android:textColor="#000"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/detail_sereno"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginEnd="2dp"
                android:gravity="right"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Hora :"
                android:textColor="#000"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/detail_hora"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginEnd="2dp"
                android:gravity="right"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Fecha :"
                android:textColor="#000"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/detail_fecha"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        </LinearLayout>

        <View android:background="#B0B0B0"
            android:layout_marginTop="10dp"
            android:layout_width = "match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#F3F3F3"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Lugar de ocurrencia :"
                android:textColor="#000"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/detail_ocurrencia"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginEnd="2dp"
                android:gravity="right"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Modalidad :"
                android:textColor="#000"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/detail_modalidad"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginEnd="2dp"
                android:gravity="right"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        </LinearLayout>

        <View android:background="#B0B0B0"
            android:layout_marginTop="10dp"
            android:layout_width = "match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#F3F3F3"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Afectado :"
                android:textColor="#000"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/detail_afectado"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:id="@+id/linearPlaca"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Placa :"
                android:textColor="#000"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/detail_placa"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Resumen : "
                android:textColor="#000"
                android:gravity="center"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/detail_resumen"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_marginEnd="2dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        </LinearLayout>

        <View android:background="#B0B0B0"
            android:layout_marginTop="10dp"
            android:layout_width = "match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="UbicaciÃ³n del incidente"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"/>

        <com.google.android.gms.maps.MapView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/map_view" />
    </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>